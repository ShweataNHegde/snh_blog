<header class="main-header">
    <a class="logo" href="/">
      <img width="32px" height="32px" data-sizes="auto" sizes="32px"
        src="/assets/img/icon-32.png"
        srcset="
        /assets/img/icon-32.png 32w,
        /assets/img/icon-96.png 96w,
        /assets/img/icon-192.png 192w,
        /assets/img/icon-512.png 512w"
        alt="{{ site.title }}"
      />
    </a>
    
    <form class="search" id="search-form">
      <!--<label for="search">Search</label>-->
      <input id="searchText" name="search" type="search" placeholder="Search">
      <button class="submit" type="button" onclick="searchPosts()">
        <svg width="24" height="24" viewBox="0 0 24 24">
          <path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
        </svg>
      </button>
    </form>
    
    <nav class="main-nav">
      <ul class="primary-nav">
        {% for menuItem in site.menu %}
        <li><a href="{{menuItem.link}}">{{menuItem.text}}</a></li>
        {% endfor %}
      </ul>
      
      <ul class="secondary-nav">
        {% if site.patreon.active %}
        <li><a href="{{site.patreon.link}}">{{site.patreon.text}}</a></li>
        {% endif %}
      </ul>
    </nav>
  </header>
  <div id="searchResultsBox" class="text-white bg-dark">
  <div id="searchResults"></div>

